<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:rowCount="2">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4DB6AC"
        android:padding="@dimen/widget_margin"
        android:layout_gravity="fill_horizontal"
        android:layout_columnSpan="5"
        android:layout_row="0"
        android:layout_column="0">

        <TextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#55000000"
            android:textSize="40sp"
            android:text="-22 C"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:layout_below="@+id/name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:id="@+id/name"
            android:textSize="24sp"
            android:textColor="#55000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="760 mm Hg"
            android:id="@+id/pressure"
            android:textColor="#55000000"
            android:textSize="18sp"
            android:layout_below="@+id/weatherIcon"
            android:layout_alignLeft="@+id/temperature"
            android:layout_alignStart="@+id/temperature" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 m/s"
            android:id="@+id/wind"
            android:textColor="#55000000"
            android:textSize="18sp"
            android:layout_below="@+id/temperature"
            android:layout_toRightOf="@+id/pressure"
            android:layout_toEndOf="@+id/pressure"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weatherIcon"
            android:src="@drawable/four"
            android:layout_above="@+id/wind"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/name"
            android:layout_alignEnd="@+id/name" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:weightSum="1"
        android:layout_columnWeight="1"
        android:background="#B2DFDB">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sun"
            android:id="@+id/textView8"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:id="@+id/imageView"
            android:src="@drawable/four"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="15 C/ 20 C"
            android:id="@+id/textView9"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:weightSum="1"
        android:layout_columnWeight="1"
        android:background="#B2DFDB">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mon"
            android:id="@+id/textView12"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:id="@+id/imageView2"
            android:src="@drawable/four"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="15 C/ 20 C"
            android:id="@+id/textView11"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:weightSum="1"
        android:layout_columnWeight="1"
        android:background="#B2DFDB">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tue"
            android:id="@+id/textView10"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:id="@+id/imageView3"
            android:src="@drawable/four"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="15 C/ 20 C"
            android:id="@+id/textView13"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="3"
        android:weightSum="1"
        android:layout_columnWeight="1"
        android:background="#B2DFDB">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Wed"
            android:id="@+id/textView14"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:id="@+id/imageView4"
            android:src="@drawable/four"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="15 C/ 20 C"
            android:id="@+id/textView15"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="4"
        android:weightSum="1"
        android:layout_columnWeight="1"
        android:background="#B2DFDB">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Thu"
            android:id="@+id/textView16"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:id="@+id/imageView5"
            android:src="@drawable/four"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="15 C/ 20 C"
            android:id="@+id/textView17"
            android:layout_weight="0.23"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</GridLayout>